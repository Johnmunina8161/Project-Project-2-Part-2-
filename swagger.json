{
  "openapi": "3.0.0",
  "info": {
    "title": "Student & Courses API",
    "description": "API for managing students and courses with OAuth authentication. <br><br> <a href='/auth/github' style='display: inline-block; padding: 10px 20px; background-color: #24292e; color: white; border-radius: 5px; text-decoration: none; font-weight: bold;'>Log in with GitHub</a> <a href='/auth/logout' style='margin-left: 10px; color: #d73a49;'>Logout</a>",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/",
      "description": "Current server (localhost or Render)"
    }
  ],
  "paths": {
    "/api/students": {
      "get": {
        "summary": "Get all students",
        "responses": {
          "200": {
            "description": "List of students",
            "content": {
              "application/json": {
                "example": [
                  {
                    "_id": "65a1f1a1a1a1a1a1a1a1a1a1",
                    "firstName": "John",
                    "lastName": "Doe",
                    "email": "john@example.com",
                    "age": 20,
                    "major": "Computer Science",
                    "enrollmentDate": "2024-01-01",
                    "status": "Active"
                  }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a student (Protected)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["firstName", "lastName", "email"],
                "properties": {
                  "firstName": { "type": "string", "example": "John" },
                  "lastName": { "type": "string", "example": "Doe" },
                  "email": { "type": "string", "example": "john@example.com" },
                  "age": { "type": "integer", "example": 20 },
                  "major": { "type": "string", "example": "Web Development" },
                  "enrollmentDate": { "type": "string", "example": "2026-02-05" },
                  "status": { "type": "string", "example": "Active" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Student created" },
          "400": { "description": "Invalid input - Data validation failed" },
          "401": { "description": "Unauthorized - Please login with GitHub" }
        }
      }
    },
    "/api/students/{id}": {
      "put": {
        "summary": "Update a student (Protected)",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": { "type": "string" },
                  "lastName": { "type": "string" },
                  "email": { "type": "string" },
                  "age": { "type": "integer" },
                  "major": { "type": "string" },
                  "enrollmentDate": { "type": "string" },
                  "status": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Student updated" },
          "401": { "description": "Unauthorized" }
        }
      },
      "delete": {
        "summary": "Delete a student (Protected)",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Student deleted" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/courses": {
      "get": {
        "summary": "Get all courses",
        "responses": {
          "200": { "description": "List of courses" }
        }
      },
      "post": {
        "summary": "Create a course (Protected)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title"],
                "properties": {
                  "title": { "type": "string", "example": "Web Services" },
                  "code": { "type": "string", "example": "CSE341" },
                  "credits": { "type": "integer", "example": 3 }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Course created" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/auth/github": {
      "get": {
        "summary": "Login with GitHub OAuth",
        "responses": { "302": { "description": "Redirect to GitHub" } }
      }
    },
    "/auth/logout": {
      "get": {
        "summary": "Logout user",
        "responses": { "200": { "description": "User logged out" } }
      }
    }
  }
}